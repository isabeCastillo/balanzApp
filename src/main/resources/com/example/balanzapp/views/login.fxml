<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.balanzapp.controllers.LoginController"
            prefWidth="600" prefHeight="400"
            stylesheets="@../styles/style.css">

    <!-- Panel izquierdo -->
    <left>
        <VBox fx:id="leftPanel" alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <Label fx:id="welcomeTitle" text="Bienvenido"/>
            <Label fx:id="welcomeMessage"
                   text="¡Nos alegra verte por aquí! Si ya tienes una cuenta, por favor, inicia sesión para continuar."
                   wrapText="true" maxWidth="220"/>
            <HBox alignment="CENTER" spacing="10">
                <Label fx:id="noAccountLabel" text="¿Aún no te has registrado?"/>

            </HBox>
            <Button fx:id="btnRegistro" text="Regístrate" onAction="#irARegistro"/>
        </VBox>
    </left>

    <!-- Panel principal -->
    <center>
        <VBox fx:id="centerPanel" alignment="CENTER" spacing="15">
            <ImageView fitWidth="160" preserveRatio="true">
                <Image url="@../imagenes/logoOscuro.png"/>
            </ImageView>

            <Label fx:id="userLabel" text="Usuario"/>
            <TextField fx:id="txtUsuario" promptText="Ingresa tu usuario" prefWidth="250"/>

            <Label fx:id="passLabel" text="Contraseña"/>
            <PasswordField fx:id="txtContrasena" promptText="Ingresa tu contraseña" prefWidth="250"/>

            <Button fx:id="btnIngresar" text="Ingresar" prefWidth="250"/>
        </VBox>
    </center>
</BorderPane>