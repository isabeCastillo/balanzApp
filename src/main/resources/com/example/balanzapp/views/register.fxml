<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.balanzapp.controllers.RegisterController"
            prefWidth="600" prefHeight="400"
            stylesheets="@../styles/style.css">

    <!-- Panel izquierdo -->
    <left>
        <VBox fx:id="leftPanel" alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <Label fx:id="registerTitle" text="Crea tu cuenta"/>
            <Label fx:id="registerMessage" text="Regístrate para comenzar a usar la aplicación." wrapText="true" maxWidth="220"/>
            <HBox alignment="CENTER" spacing="5">
                <Label fx:id="alreadyAccountLabel" text="¿Ya tienes cuenta?"/>
                <Button fx:id="btnLogin" text="Inicia sesión" onAction="#irALogin"/>
            </HBox>
        </VBox>
    </left>

    <!-- Panel principal -->
    <center>
        <VBox fx:id="centerPanel" alignment="CENTER" spacing="15">
            <ImageView fitWidth="160" preserveRatio="true">
                <Image url="@../imagenes/logoOscuro.png"/>
            </ImageView>

            <Label fx:id="userLabel" text="Nombre de usuario"/>
            <TextField fx:id="txtUsuario" promptText="Crea un nombre de usuario" prefWidth="250"/>

            <Label fx:id="emailLabel" text="Correo electrónico"/>
            <TextField fx:id="txtCorreo" promptText="Ingresa tu correo electrónico" prefWidth="250"/>

            <Label fx:id="passLabel" text="Contraseña"/>
            <PasswordField fx:id="txtContrasena" promptText="Crea una contraseña" prefWidth="250"/>

            <Button fx:id="btnRegistrar" text="Registrar cuenta" prefWidth="250"/>
        </VBox>
    </center>
</BorderPane>