<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="1373.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.balanzapp.controllers.LibroMayorController"
            stylesheets="@../styles/style.css">

    <children>
        <!-- SplitPane ocupa toda la ventana -->
        <SplitPane dividerPositions="0.18"
                   AnchorPane.topAnchor="0.0"
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0">
            <items>
                <!-- ========== SIDEBAR IZQUIERDO ========== -->
                <AnchorPane prefWidth="230" styleClass="sidebar">
                    <children>
                        <VBox alignment="TOP_CENTER"
                              prefWidth="230"
                              spacing="20"
                              AnchorPane.topAnchor="20.0"
                              AnchorPane.bottomAnchor="20.0"
                              AnchorPane.leftAnchor="0.0"
                              AnchorPane.rightAnchor="0.0">

                            <!-- Usuario activo -->
                            <VBox alignment="CENTER" spacing="4">
                                <Label fx:id="lblUs"  text="Nombre" styleClass="user-name"/>
                                <Label fx:id="lblad"  text="Rol"     styleClass="user-role"/>
                            </VBox>

                            <!-- Menú -->
                            <VBox spacing="6" prefWidth="210">
                                <Button fx:id="btninicio"            text="Inicio"                 onAction="#goToHome"             styleClass="nav-btn"/>
                                <Button fx:id="btndoc"               text="Documentos"            onAction="#goToDoc"              styleClass="nav-btn"/>
                                <Button fx:id="btnlibrodiario"       text="Libro Diario"          onAction="#goToLibroDiario"      styleClass="nav-btn"/>
                                <Button fx:id="btnlibromayor"        text="Libro Mayor"           onAction="#goToLibroMayor"       styleClass="nav-btn"/>

                                <ComboBox fx:id="cmbbalances" promptText="Balances" styleClass="combo"/>

                                <Button fx:id="btnestadoderesultados" text="Estado de Resultados" onAction="#goToEstadoResultados" styleClass="nav-btn"/>
                                <Button fx:id="btncatalogo"           text="Catálogo de Cuentas"  onAction="#goToCatalogoCuentas"  styleClass="nav-btn"/>
                                <Button fx:id="btnusuario"            text="Usuario"              onAction="#goToUsuario"          styleClass="nav-btn"/>
                                <Button fx:id="btnbitacora"           text="Bitácora del Auditor" onAction="#goToBitacoraAuditor"  styleClass="nav-btn"/>
                            </VBox>

                            <!-- Espaciador -->
                            <VBox VBox.vgrow="ALWAYS"/>

                            <!-- Cerrar sesión -->
                            <Button fx:id="btncerrar" text="Cerrar Sesión" onAction="#Close" styleClass="logout-btn"/>
                        </VBox>
                    </children>
                </AnchorPane>

                <!-- ========== CONTENIDO DERECHO ========== -->
                <AnchorPane>
                    <children>
                        <VBox spacing="20" AnchorPane.topAnchor="20.0"
                              AnchorPane.bottomAnchor="20.0"
                              AnchorPane.leftAnchor="40.0"
                              AnchorPane.rightAnchor="40.0">
                            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="28.0" prefWidth="1076.0" styleClass="titulo" text="Libro Mayor" />

                            <!-- FILTROS -->
                            <GridPane hgap="3" vgap="3">
                                <children>
                                    <Label text="Cuenta:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" />
                                    <ComboBox fx:id="comboCuenta" minWidth="-Infinity" prefHeight="39.0" prefWidth="162.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                    <Label prefHeight="17.0" prefWidth="40.0" text="Desde:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" />
                                    <DatePicker fx:id="dateDesde" prefHeight="45.0" prefWidth="172.0" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                                    <Label text="Hasta:" GridPane.columnIndex="4" GridPane.halignment="RIGHT" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" />
                                    <DatePicker fx:id="dateHasta" prefHeight="45.0" prefWidth="181.0" GridPane.columnIndex="5" />
                                </children>
                                <columnConstraints>
                                    <ColumnConstraints maxWidth="145.0" minWidth="42.0" prefWidth="66.0" />
                                    <ColumnConstraints maxWidth="193.0" minWidth="90.0" prefWidth="169.0" />
                                    <ColumnConstraints maxWidth="111.0" minWidth="37.0" prefWidth="111.0" />
                                    <ColumnConstraints maxWidth="219.0" minWidth="114.0" prefWidth="163.0" />
                                    <ColumnConstraints maxWidth="146.0" minWidth="36.0" prefWidth="126.0" />
                                    <ColumnConstraints maxWidth="163.0" minWidth="28.0" prefWidth="148.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints />
                                </rowConstraints>
                            </GridPane>

                            <!-- BOTONES -->
                            <HBox prefHeight="25.0" prefWidth="966.0" spacing="30.0">
                                <children>
                                    <Button fx:id="bntbuscar" prefHeight="25.0" prefWidth="171.0" text="Buscar" HBox.hgrow="ALWAYS" />
                                    <Button fx:id="btndescargarpdf" prefHeight="25.0" prefWidth="179.0" text="Descargar PDF" />
                                    <Button fx:id="btndescargarexcel" prefHeight="25.0" prefWidth="146.0" text="Descargar Excel" />
                                </children>
                            </HBox>

                            <!-- ESQUEMA DE MAYOR: DOS CAJAS + SALDO -->
                            <Label fx:id="lblNombreYTipoCuenta" prefHeight="56.0" prefWidth="521.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="NOMBRE DE LA CUENTA - TIPO DE CUENTA" textAlignment="CENTER" />
                            <Separator />

                            <HBox alignment="CENTER" prefHeight="28.0" prefWidth="1082.0" spacing="200">
                                <children>
                                    <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="DEBE" />
                                    <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="HABER" />
                                </children>
                            </HBox>

                            <HBox alignment="CENTER" prefHeight="293.0" prefWidth="1117.0" spacing="10.0">
                                <children>
                                    <ListView fx:id="listDebe" minWidth="-Infinity" prefHeight="500.0" prefWidth="500.0" style="-fx-border-color: black; -fx-border-width: 1;" HBox.hgrow="ALWAYS" />
                                    <ListView fx:id="listHaber" minWidth="-Infinity" prefHeight="293.0" prefWidth="500.0" style="-fx-border-color: black; -fx-border-width: 1;" HBox.hgrow="ALWAYS" />
                                </children>
                            </HBox>

                            <Label fx:id="lblSaldo" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="SALDO: $0.00" />
                        </VBox>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>