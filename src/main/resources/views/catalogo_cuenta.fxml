<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import javafx.geometry.Insets?>
<AnchorPane prefHeight="650.0" prefWidth="1373.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.balanzapp.controllers.CatalogoCuentaController"
            stylesheets="@../styles/style.css">

    <children>
        <!-- SplitPane ocupa toda la ventana -->
        <SplitPane dividerPositions="0.18"
                   AnchorPane.topAnchor="0.0"
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0">
            <items>
                <!-- ========== SIDEBAR IZQUIERDO ========== -->
                <AnchorPane prefWidth="230" styleClass="sidebar">
                    <children>
                        <VBox alignment="TOP_CENTER"
                              prefWidth="230"
                              spacing="20"
                              AnchorPane.topAnchor="20.0"
                              AnchorPane.bottomAnchor="20.0"
                              AnchorPane.leftAnchor="0.0"
                              AnchorPane.rightAnchor="0.0">

                            <!-- Usuario activo -->
                            <VBox alignment="CENTER" spacing="4">
                                <Label fx:id="lblUs"  text="Nombre" styleClass="user-name"/>
                                <Label fx:id="lblad"  text="Rol"     styleClass="user-role"/>
                            </VBox>

                            <!-- Menú -->
                            <VBox spacing="6" prefWidth="210">
                                <Button fx:id="btninicio"            text="Inicio"                 onAction="#goToHome"             styleClass="nav-btn"/>
                                <Button fx:id="btndoc"               text="Documentos"            onAction="#goToDoc"              styleClass="nav-btn"/>
                                <Button fx:id="btnlibrodiario"       text="Libro Diario"          onAction="#goToLibroDiario"      styleClass="nav-btn"/>
                                <Button fx:id="btnlibromayor"        text="Libro Mayor"           onAction="#goToLibroMayor"       styleClass="nav-btn"/>

                                <ComboBox fx:id="cmbbalances" promptText="Balances" styleClass="combo"/>

                                <Button fx:id="btnestadoderesultados" text="Estado de Resultados" onAction="#goToEstadoResultados" styleClass="nav-btn"/>
                                <Button fx:id="btncatalogo"           text="Catálogo de Cuentas"  onAction="#goToCatalogoCuentas"  styleClass="nav-btn"/>
                                <Button fx:id="btnusuario"            text="Usuario"              onAction="#goToUsuario"          styleClass="nav-btn"/>
                                <Button fx:id="btnbitacora"           text="Bitácora del Auditor" onAction="#goToBitacoraAuditor"  styleClass="nav-btn"/>
                            </VBox>

                            <!-- Espaciador -->
                            <VBox VBox.vgrow="ALWAYS"/>

                            <!-- Cerrar sesión -->
                            <Button fx:id="btncerrar" text="Cerrar Sesión" onAction="#Close" styleClass="logout-btn"/>
                        </VBox>
                    </children>
                </AnchorPane>

                <!-- ========== CONTENIDO DERECHO ========== -->
                <AnchorPane>
                    <children>
                        <VBox spacing="20" AnchorPane.topAnchor="20.0"
                              AnchorPane.bottomAnchor="20.0"
                              AnchorPane.leftAnchor="40.0"
                              AnchorPane.rightAnchor="40.0">
                            <Label text="Catálogo de cuenta" styleClass="titulo"/>
                            <GridPane hgap="10" prefHeight="195.0" prefWidth="412.0" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints halignment="RIGHT" />
                                    <ColumnConstraints prefWidth="150" />
                                </columnConstraints>
                                <Label text="Código:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <TextField fx:id="txtCodigo" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" />
                                <Label text="Cuenta:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <TextField fx:id="txtCuenta" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label text="Tipo:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <TextField fx:id="txtTipo" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label text="Naturaleza:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                <TextField fx:id="txtNaturaleza" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <Label text="Grupo:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                <TextField fx:id="txtGrupo" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                </rowConstraints>
                            </GridPane>
                            <HBox spacing="10">
                                <Button fx:id="btnagregar" onAction="#agregarCuenta" text="Agregar">
                                    <HBox.margin>
                                        <Insets left="50.0" />
                                    </HBox.margin></Button>
                                <Button fx:id="btneditar" onAction="#editarCuenta" text="Editar">
                                    <HBox.margin>
                                        <Insets left="50.0" />
                                    </HBox.margin></Button>
                                <Button fx:id="btneliminar" onAction="#eliminarCuenta" text="Eliminar">
                                    <HBox.margin>
                                        <Insets left="50.0" />
                                    </HBox.margin></Button>
                                <Button fx:id="btndescargarExcel" text="Descargar Excel" HBox.hgrow="ALWAYS">
                                    <HBox.margin>
                                        <Insets left="50.0" />
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="btndescargarPdf" text="Descargar PDF">
                                    <HBox.margin>
                                        <Insets left="50.0" />
                                    </HBox.margin></Button>
                            </HBox>
                            <TableView fx:id="tblCatalogo" prefHeight="438.0" prefWidth="1008.0">
                                <columns>
                                    <TableColumn fx:id="colCodigo" prefWidth="150" text="Código" />
                                    <TableColumn fx:id="colNombre" prefWidth="339.0" text="Catálogo de cuentas" />
                                    <TableColumn fx:id="colTipo" prefWidth="180.0" text="Tipo de cuenta" />
                                    <TableColumn fx:id="colNaturaleza" prefWidth="158.0" text="Acreedora o Deudora" />
                                    <TableColumn fx:id="colGrupo" prefWidth="170.0" text="Grupo" />
                                </columns>
                            </TableView>
                        </VBox>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>