<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="1373.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.balanzapp.controllers.UsuarioController"
            stylesheets="@../styles/style.css">

    <children>
        <!-- SplitPane ocupa toda la ventana -->
        <SplitPane dividerPositions="0.18"
                   AnchorPane.topAnchor="0.0"
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0">

            <items>

                <!-- ========== SIDEBAR IZQUIERDO ========== -->
                <AnchorPane prefWidth="230" styleClass="sidebar">
                    <children>
                        <VBox alignment="TOP_CENTER"
                              prefWidth="230"
                              spacing="20"
                              AnchorPane.topAnchor="20.0"
                              AnchorPane.bottomAnchor="20.0"
                              AnchorPane.leftAnchor="0.0"
                              AnchorPane.rightAnchor="0.0">

                            <!-- Usuario activo -->
                            <VBox alignment="CENTER" spacing="4">
                                <Label fx:id="lblUs"  text="Nombre" styleClass="user-name"/>
                                <Label fx:id="lblad"  text="Rol"     styleClass="user-role"/>
                            </VBox>

                            <!-- Menú -->
                            <VBox spacing="6" prefWidth="210">
                                <Button fx:id="btninicio"            text="Inicio"                 onAction="#goToHome"             styleClass="nav-btn"/>
                                <Button fx:id="btndoc"               text="Documentos"            onAction="#goToDoc"              styleClass="nav-btn"/>
                                <Button fx:id="btnlibrodiario"       text="Libro Diario"          onAction="#goToLibroDiario"      styleClass="nav-btn"/>
                                <Button fx:id="btnlibromayor"        text="Libro Mayor"           onAction="#goToLibroMayor"       styleClass="nav-btn"/>

                                <ComboBox fx:id="cmbbalances" promptText="Balances" styleClass="combo"/>

                                <Button fx:id="btnestadoderesultados" text="Estado de Resultados" onAction="#goToEstadoResultados" styleClass="nav-btn"/>
                                <Button fx:id="btncatalogo"           text="Catálogo de Cuentas"  onAction="#goToCatalogoCuentas"  styleClass="nav-btn"/>
                                <Button fx:id="btnusuario"            text="Usuario"              onAction="#goToUsuario"          styleClass="nav-btn"/>
                                <Button fx:id="btnbitacora"           text="Bitácora del Auditor" onAction="#goToBitacoraAuditor"  styleClass="nav-btn"/>
                            </VBox>

                            <!-- Espaciador -->
                            <VBox VBox.vgrow="ALWAYS"/>

                            <!-- Cerrar sesión -->
                            <Button fx:id="btncerrar" text="Cerrar Sesión" onAction="#Close" styleClass="logout-btn"/>
                        </VBox>
                    </children>
                </AnchorPane>

                <!-- ========== CONTENIDO DERECHO ========== -->
                <AnchorPane>
                    <children>
                        <!-- VBox principal que se estira con la ventana -->
                        <VBox spacing="20"
                              AnchorPane.topAnchor="20.0"
                              AnchorPane.bottomAnchor="20.0"
                              AnchorPane.leftAnchor="40.0"
                              AnchorPane.rightAnchor="40.0">

                            <!-- Título -->
                            <Label text="Usuarios" styleClass="titulo"/>

                            <!-- FORMULARIO EN GRID -->
                            <GridPane hgap="20" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="14"/>
                                    <ColumnConstraints percentWidth="18"/>
                                    <ColumnConstraints percentWidth="14"/>
                                    <ColumnConstraints percentWidth="18"/>
                                    <ColumnConstraints percentWidth="14"/>
                                    <ColumnConstraints percentWidth="22"/>
                                </columnConstraints>

                                <!-- Fila 1 -->
                                <Label text="Nombre Completo" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtNombre" promptText="Nombre completo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Género" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                                <ComboBox fx:id="cmbGenero" promptText="Seleccione género" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                                <Label text="Fecha Nacimiento" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
                                <DatePicker fx:id="dpFechaNacimiento" GridPane.rowIndex="0" GridPane.columnIndex="5"/>

                                <!-- Fila 2 -->
                                <Label text="DUI" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtDUI" promptText="00000000-0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Teléfono" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                                <TextField fx:id="txtTelefono" promptText="0000-0000" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                                <Label text="Rol" GridPane.rowIndex="1" GridPane.columnIndex="4"/>
                                <ComboBox fx:id="cmbRoles" promptText="Seleccione rol" GridPane.rowIndex="1" GridPane.columnIndex="5"/>

                                <!-- Fila 3 -->
                                <Label text="Dirección" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtDireccion" promptText="Dirección" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="5"/>

                                <!-- Fila 4 -->
                                <Label text="Correo" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtCorreo" promptText="ejemplo@correo.com" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.columnSpan="5"/>

                                <!-- Fila 5 -->
                                <Label text="Usuario" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtNombreUsuario" promptText="Usuario" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                                <Label text="Contraseña" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
                                <PasswordField fx:id="txtContraseña" promptText="Contraseña" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
                            </GridPane>

                            <!-- BOTONES -->
                            <HBox spacing="20" alignment="CENTER">
                                <Button fx:id="btnAgregarUsuario" text="Agregar" onAction="#agregarUsuario"/>
                                <Button fx:id="btnEditar"          text="Editar"  onAction="#editarUsuario"/>
                                <Button fx:id="btnEliminar"        text="Eliminar" onAction="#eliminarUsuario"/>
                            </HBox>

                            <!-- TABLA (crece con el espacio disponible) -->
                            <TableView fx:id="tblUsuarios" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colNombre"          text="Nombre"           minWidth="220"/>
                                    <TableColumn fx:id="colGenero"          text="Género"           minWidth="90"/>
                                    <TableColumn fx:id="colFechaNacimiento" text="Fecha Nacimiento" minWidth="120"/>
                                    <TableColumn fx:id="colDUI"             text="DUI"              minWidth="120"/>
                                    <TableColumn fx:id="colTelefono"        text="Teléfono"         minWidth="120"/>
                                    <TableColumn fx:id="colDireccion"       text="Dirección"        minWidth="260"/>
                                    <TableColumn fx:id="colCorreo"          text="Correo"           minWidth="200"/>
                                    <TableColumn fx:id="colUsuario"         text="Usuario"          minWidth="100"/>
                                    <TableColumn fx:id="colRol"             text="Rol"              minWidth="110"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </children>
                </AnchorPane>

            </items>
        </SplitPane>
    </children>
</AnchorPane>