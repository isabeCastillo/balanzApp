<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.balanzapp.controllers.LibroDiarioController"
            prefHeight="600.0" prefWidth="900.0">

    <children>
        <SplitPane dividerPositions="0.25" prefWidth="900.0" prefHeight="600.0">
            <items>

                <!-- Panel lateral -->
                <AnchorPane prefWidth="200.0" style="-fx-background-color: #5A238A;">
                    <children>
                        <VBox layoutY="80.0" spacing="5.0" prefWidth="180.0" alignment="TOP_LEFT">
                            <children>
                                <Button text="Inicio" onAction="#goToHome" textFill="WHITE" style="-fx-background-color: transparent;" />
                                <Button text="Documentos" onAction="#goToDoc" textFill="WHITE" style="-fx-background-color: transparent;" />
                                <Button text="Libro Diario" onAction="#goToLibroDiario" textFill="WHITE" style="-fx-background-color: transparent;" />
                                <Button text="Libro Mayor" onAction="#goToLibroMayor" textFill="WHITE" style="-fx-background-color: transparent;" />
                                <Button text="Balances" onAction="#goToBlances" textFill="WHITE" style="-fx-background-color: transparent;" />
                                <Button text="Estado de resultado" onAction="#goToEstadoResultados" textFill="WHITE" style="-fx-background-color: transparent;" />
                                <Button text="Catálogo de cuenta" onAction="#goToCatalogoCuentas" textFill="WHITE" style="-fx-background-color: transparent;" />
                                <Button text="Usuario" onAction="#goToUsuario" textFill="WHITE" style="-fx-background-color: transparent;" />
                                <Button text="Bitácora del Auditor" onAction="#goToBitacoraAuditor" textFill="WHITE" style="-fx-background-color: transparent;" />
                            </children>
                        </VBox>

                        <Button text="Cerrar sesión" layoutX="20.0" layoutY="500.0" onAction="#Close" textFill="WHITE" style="-fx-background-color: transparent;" />
                        <ImageView layoutX="15.0" layoutY="505.0" fitWidth="25.0" fitHeight="20.0" preserveRatio="true">
                            <image>
                                <Image url="@../imagenes/logout.png" />
                            </image>
                        </ImageView>

                        <Label text="Nombre" layoutX="20.0" layoutY="20.0" textFill="WHITE"/>
                        <Label text="Rol" layoutX="20.0" layoutY="40.0" textFill="WHITE"/>
                    </children>
                </AnchorPane>

                <AnchorPane prefWidth="700.0">
                    <children>
                        <VBox spacing="15.0" >
                            <children>
                                <Label text="Libro Diario" styleClass="titulo"/>


                                <GridPane hgap="10" vgap="10">
                                    <children>
                                        <Label text="Año:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                        <ComboBox fx:id="comboAnio" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                        <Label text="Mes:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                                        <ComboBox fx:id="comboMes" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                                    </children>
                                </GridPane>


                                <GridPane hgap="10" vgap="10">
                                    <children>
                                        <Label text="Fecha:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                        <DatePicker fx:id="dateFecha" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                        <Label text="Concepto:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                                        <TextField fx:id="txtConcepto" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                                        <Label text="Cuenta:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                        <ComboBox fx:id="comboCuenta" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                        <Label text="Tipo:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                                        <HBox spacing="10.0" GridPane.rowIndex="1" GridPane.columnIndex="3">
                                            <children>
                                                <RadioButton fx:id="radioDebe" text="Debe" />
                                                <RadioButton fx:id="radioHaber" text="Haber"/>
                                            </children>
                                        </HBox>

                                        <Label text="Monto:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                        <TextField fx:id="txtMonto" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                    </children>
                                </GridPane>

                                <HBox spacing="10.0">
                                    <children>
                                        <Button text="Subir documento" />
                                        <Button text="Descargar PDF" />
                                        <Button text="Descargar Excel" />
                                        <Button text="Buscar" />
                                        <Button text="Agregar" />
                                        <Button text="Editar"/>
                                        <Button text="Eliminar"/>
                                    </children>
                                </HBox>

                                <TableView fx:id="tablaDiario" prefHeight="300.0">
                                    <columns>
                                        <TableColumn text="Fecha"/>
                                        <TableColumn text="N° de Partida"/>
                                        <TableColumn text="Concepto"/>
                                        <TableColumn text="Cuenta"/>
                                        <TableColumn text="Debe"/>
                                        <TableColumn text="Haber"/>
                                        <TableColumn text="Documento"/>
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>

            </items>
        </SplitPane>
    </children>
</AnchorPane>