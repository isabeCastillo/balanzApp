<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.balanzapp.controllers.EstadosResultadosControllers"
            stylesheets="@../styles/style.css">

    <SplitPane dividerPositions="0.2335" prefHeight="600.0" prefWidth="900.0">
        <items>
            <!-- Panel lateral -->
            <AnchorPane prefHeight="600.0" prefWidth="207.0" style="-fx-background-color: #5A238A;">
                <VBox layoutY="81.0" prefHeight="425.0" prefWidth="207.0">
                    <children>
                        <Button fx:id="btninicio" onAction="#goToHome" text="Inicio" textFill="WHITE"
                                prefHeight="51.0" prefWidth="207.0" style="-fx-background-color: transparent;">
                            <font><Font name="Georgia Bold Italic" size="12.0"/></font>
                        </Button>
                        <Button fx:id="btndoc" onAction="#goToDoc" text="Documentos" textFill="WHITE"
                                prefHeight="51.0" prefWidth="207.0" style="-fx-background-color: transparent;">
                            <font><Font name="Georgia Bold Italic" size="12.0"/></font>
                        </Button>
                        <Button fx:id="btnlibrodiario" onAction="#goToLibroDiario" text="Libro Diario" textFill="WHITE"
                                prefHeight="51.0" prefWidth="207.0" style="-fx-background-color: transparent;">
                            <font><Font name="Georgia Bold Italic" size="12.0"/></font>
                        </Button>
                        <Button fx:id="btnlibromayor" onAction="#goToLibroMayor" text="Libro Mayor" textFill="WHITE"
                                prefHeight="51.0" prefWidth="207.0" style="-fx-background-color: transparent;">
                            <font><Font name="Georgia Bold Italic" size="12.0"/></font>
                        </Button>
                        <ComboBox fx:id="cmbbalances" promptText="Balances"
                                  prefHeight="51.0" prefWidth="207.0"
                                  style="-fx-background-color: transparent; -fx-border-color: transparent;">
                            <effect><ColorAdjust brightness="1.0"/></effect>
                        </ComboBox>
                        <Button fx:id="btnestadoderesultados" onAction="#goToEstadoResultados"
                                text="Estado de Resultados" textFill="WHITE"
                                prefHeight="51.0" prefWidth="207.0" style="-fx-background-color: transparent;">
                            <font><Font name="Georgia Bold Italic" size="12.0"/></font>
                        </Button>
                        <Button fx:id="btncatalogo" onAction="#goToCatalogoCuentas"
                                text="Catálogo de Cuentas" textFill="WHITE"
                                prefHeight="51.0" prefWidth="207.0" style="-fx-background-color: transparent;">
                            <font><Font name="Georgia Bold Italic" size="12.0"/></font>
                        </Button>
                        <Button fx:id="btnusuario" onAction="#goToUsuario"
                                text="Usuario" textFill="WHITE"
                                prefHeight="51.0" prefWidth="207.0" style="-fx-background-color: transparent;">
                            <font><Font name="Georgia Bold Italic" size="12.0"/></font>
                        </Button>
                        <Button fx:id="btnbitacora" onAction="#goToBitacoraAuditor"
                                text="Bitácora del Auditor" textFill="WHITE"
                                prefHeight="51.0" prefWidth="207.0" style="-fx-background-color: transparent;">
                            <font><Font name="Georgia Bold Italic" size="12.0"/></font>
                        </Button>
                    </children>
                </VBox>
                <Button fx:id="btncerrar" layoutX="48.0" layoutY="523.0" onAction="#Close"
                        text="Cerrar Sesión" textFill="WHITE"
                        prefHeight="38.0" prefWidth="121.0" style="-fx-background-color: transparent;">
                    <font><Font name="Georgia Bold" size="12.0"/></font>
                </Button>
                <Label fx:id="lblUs" layoutX="52.0" layoutY="29.0" text="Nombre" textFill="#fdfdfd">
                    <font><Font name="Georgia Bold" size="12.0"/></font>
                </Label>
                <Label fx:id="lblad" layoutX="51.0" layoutY="52.0" text="Rol" textFill="WHITE">
                    <font><Font name="Georgia Bold" size="12.0"/></font>
                </Label>
                <ImageView fitHeight="38.0" fitWidth="34.0" layoutX="15.0" layoutY="30.0" preserveRatio="true">
                    <image><Image url="@../imagenes/user.png"/></image>
                </ImageView>
                <ImageView fitHeight="29.0" fitWidth="26.0" layoutX="16.0" layoutY="529.0" preserveRatio="true">
                    <image><Image url="@../imagenes/logout.png"/></image>
                </ImageView>
            </AnchorPane>

            <AnchorPane prefHeight="600.0" prefWidth="693.0">
                <VBox alignment="TOP_CENTER" spacing="15" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0">
                    <Label text="Estado de Resultados" styleClass="title-label"/>

                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT"/>
                            <ColumnConstraints prefWidth="150"/>
                            <ColumnConstraints prefWidth="150"/>
                        </columnConstraints>

                        <Label text="Periodo:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cmbPeriodo" promptText="Seleccione un periodo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Año:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cmbAnio" promptText="Seleccione año" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Mes:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cmbMes" promptText="Seleccione mes" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </GridPane>


                    <HBox spacing="10">
                        <Button text="Generar"/>
                        <Button text="Descargar PDF"/>
                        <Button text="Descargar Excel"/>
                    </HBox>

                    <TableView fx:id="tblResultados" prefHeight="350" prefWidth="600">
                        <columns>
                            <TableColumn text="Cuenta" prefWidth="250"/>
                            <TableColumn text="Debe" prefWidth="150"/>
                            <TableColumn text="Haber" prefWidth="150"/>
                            <TableColumn text="Saldo" prefWidth="150"/>
                        </columns>
                    </TableView>
                </VBox>
            </AnchorPane>
        </items>
    </SplitPane>
</AnchorPane>
