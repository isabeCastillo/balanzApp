<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="650" prefWidth="1270"
            stylesheets="@../styles/style.css"
            styleClass="login-root"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.balanzapp.controllers.LoginController">

    <!-- PANEL IZQUIERDO -->
    <left>
        <VBox fx:id="leftPanel"
              prefWidth="320"
              alignment="CENTER_LEFT"
              spacing="18"
              styleClass="login-left"
              BorderPane.alignment="CENTER">

            <children>
                <Label fx:id="welcomeTitle"
                       text="Bienvenido"
                       styleClass="welcome-title"/>

                <Label fx:id="welcomeMessage"
                       maxWidth="220"
                       wrapText="true"
                       text="¡Nos alegra verte por aquí! Si ya tienes una cuenta, por favor, inicia sesión para continuar."
                       styleClass="welcome-message"/>

                <Label fx:id="noAccountLabel"
                       text="¿Aún no te has registrado?"
                       styleClass="small-text"/>

                <Button fx:id="btnRegistro"
                        text="Regístrate"
                        onAction="#irARegistro"
                        styleClass="outline-btn"/>
            </children>
        </VBox>
    </left>

    <!-- PANEL CENTRAL -->
    <center>
        <VBox fx:id="centerPanel"
              alignment="CENTER"
              spacing="20"
              styleClass="login-center"
              BorderPane.alignment="CENTER">

            <children>
                <ImageView fitWidth="190" preserveRatio="true" styleClass="login-logo">
                    <image>
                        <Image url="@../imagenes/logoOscuro.png"/>
                    </image>
                </ImageView>

                <Label fx:id="userLabel"
                       text="Usuario"
                       styleClass="field-label"/>
                <TextField fx:id="txtUsuario"
                           promptText="Ingresa tu usuario"
                           prefWidth="600"
                           styleClass="login-field"/>

                <Label fx:id="passLabel"
                       text="Contraseña"
                       styleClass="field-label"/>
                <PasswordField fx:id="txtContrasena"
                               promptText="Ingresa tu contraseña"
                               prefWidth="600"
                               styleClass="login-field"/>

                <Button fx:id="btnIngresar"
                        text="Ingresar"
                        onAction="#iniciarSesion"
                        styleClass="primary-btn"/>
            </children>
        </VBox>
    </center>
</BorderPane>
